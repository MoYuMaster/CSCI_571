<!--<?xml version="1.0" encoding="utf-8"?>-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/purple_500"
        android:layout_centerInParent="true"
        android:elevation="10dp"/>
    <TextView
        android:id="@+id/fetch_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinnerText"
        android:layout_below="@id/progressBar1"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="173dp"
        tools:context=".DetailPage"
        android:id="@+id/DetailAll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="70dp"/>
            <!--Basic Information-->
            <RelativeLayout
                android:id="@+id/detailTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                android:padding="10dp"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/ticker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Ticker"/>
                <TextView
                    android:id="@+id/current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:text="currentPrice"
                    />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ticker"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Name"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/change_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_below="@+id/current_price"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:text="Change Price"
                    />
            </RelativeLayout>
            <!--        Chart Part-->
            <LinearLayout
                android:id="@+id/high_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="invisible">
                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--        Portfolio Part-->
            <RelativeLayout
                android:id="@+id/portfolio"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/portfolio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Portfolio" />
                <GridLayout
                    android:layout_below="@+id/portfolio_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="6">
                    <TextView
                        android:id="@+id/portfolio_shares"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_columnWeight="5"
                        android:textColor="@color/black"
                        android:text="Shares information" />
                    <Button
                        android:id="@+id/portfolio_trade_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#298c5b"
                        android:text="Trade"/>
                </GridLayout>
            </RelativeLayout>
            <!--        Stats Part-->
            <RelativeLayout
                android:id="@+id/stats"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/stats_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Portfolio"/>
                <GridLayout
                    android:id="@+id/simpleGridView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/stats_title"
                    android:columnCount="3"
                    android:rowCount="3">
                    <TextView
                        android:id="@+id/stats_current_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_marginVertical="1dp"
                        android:gravity="center|top"
                        android:textSize="15sp"
                        android:text="Current Price" />

                    <TextView
                        android:id="@+id/stats_low_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_marginVertical="1dp"
                        android:gravity="center|top"
                        android:textSize="15sp"
                        android:text="Low" />
                    <TextView
                        android:id="@+id/stats_bid_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_marginVertical="1dp"
                        android:gravity="center|top"
                        android:textSize="15sp"
                        android:text="Bid Price" />
                    <TextView
                        android:id="@+id/stats_open_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_marginVertical="1dp"
                        android:gravity="center|top"
                        android:textSize="15sp"
                        android:text="Open Price" />
                    <TextView
                        android:id="@+id/stats_mid_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_marginVertical="1dp"
                        android:gravity="center|top"
                        android:textSize="15sp"
                        android:text="Mid" />
                    <TextView
                        android:id="@+id/stats_high_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_marginVertical="1dp"
                        android:gravity="center|top"
                        android:textSize="15sp"
                        android:text="High" />
                    <TextView
                        android:id="@+id/stats_volume"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:paddingHorizontal="5dp"
                        android:layout_marginVertical="1dp"
                        android:gravity="center|top"
                        android:textSize="15sp"
                        android:text="Volume" />
                </GridLayout>
            </RelativeLayout>
            <!--        About Part-->
            <RelativeLayout
                android:id="@+id/about"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginHorizontal="10dp"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/about_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="About" />
                <TextView
                    android:id="@+id/about_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about_title"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="About..."
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/about_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/about_description"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Show more..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#606060"
                    android:textSize="16sp"
                    android:contextClickable="true"
                    android:onClick="clickShow"/>
            </RelativeLayout>
            <!--        News Part-->
            <RelativeLayout
                android:id="@+id/news"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="News" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/news_title"
                    android:id="@+id/newsRecyclerView"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

