<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/home_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/purple_500"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/home_fetch_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinnerText"
        android:layout_below="@+id/home_progressbar"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:visibility="visible"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="70dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/main_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:text="Date"
                android:textSize="25dp"
                android:visibility="invisible"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/main_portfolio">

                <TextView
                    android:id="@+id/main_portfolio_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/home_title"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="PORTFOLIO" />

                <TextView
                    android:id="@+id/main_networth_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_portfolio_title"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:text="Net Worth" />

                <TextView
                    android:id="@+id/main_networth_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_networth_title"
                    android:layout_marginHorizontal="12dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:text="213213.00" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_portfolio_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_networth_value" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_favorite"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/main_favorite_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/home_title"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="FAVORITES" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_favorite_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_favorite_title" />
            </RelativeLayout>

            <TextView
                android:id="@+id/main_tiingo_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Powered by tiingo"
                android:layout_marginVertical="10dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:onClick="tiingoRedirect"
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>